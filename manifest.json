{
  "manifest_version": 3,
  "name": "Naukri â†’ LinkedIn",
  "version": "1.0",
  "description": "Press Ctrl+Shift+L on any Naukri job listing to search the company on LinkedIn and find employees via Google dork",
  "permissions": ["tabs", "scripting", "storage"],
  "host_permissions": [
    "https://www.naukri.com/*",
    "https://naukri.com/*",
    "https://www.linkedin.com/*",
    "https://www.google.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.naukri.com/*", "https://naukri.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "search-linkedin": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Search current Naukri company on LinkedIn + Google dork"
    }
  }
}
